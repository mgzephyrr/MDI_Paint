<Window x:Class="MDI_Paint.ProgressBarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MDI_Paint"
        mc:Ignorable="d"
        Title="ProgressBarWindow" Height="100" Width="300" WindowStyle="None">
    <Grid>
        <ProgressBar Name="progressBar" Width="200" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Отменить" Click="CancelButton_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom"  Height="20" Margin="0, 0, 10, 10"/>
    </Grid>
</Window>
